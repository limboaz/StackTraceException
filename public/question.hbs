<html>
<head>
    <title>{{question.title}}</title>
    <!-- CSS -->
    <link href="stylesheets/bootstrap.css" type="text/css" rel="stylesheet">
    <link href="stylesheets/main.css" type="text/css" rel="stylesheet">

    <!-- JavaScript -->
    <script src="javascript/jquery.min.js"></script>
    <script src="javascript/bootstrap.bundle.min.js"></script>
    <script src="javascript/index.js"></script>
    <script src="javascript/question.js"></script>
</head>

<body>
<div id="main_content" class="container">
    <nav class="row">
        <h3 class="col">Stack Trace Exception</h3>
        {{#if logged_in}}
            <button class="col-sm-auto btn btn-danger my-2 my-sm-0" style="margin-right: 5px" onclick="delete_question()">Delete Question</button>
            <button href="/logout" class="col-sm-auto btn btn-info" onclick="logout()">Logout</button>
        {{else}}
            <a href="/login" class="col-sm-auto btn btn-info">Login</a>
        {{/if}}
    </nav>
    <div id="question">
        <h4>{{question.title}}</h4>
        <a class="badge badge-pill badge-secondary"
           href={{user_url question.user.username}}>- {{question.user.username}}</a>
        <h6> {{question.body}} </h6>
        {{#each question.tags}}
            <a href="#" style="margin-left: 3px; margin-right: 3px;" class="badge badge-pill badge-info">#{{this}}</a>
        {{/each}}
    </div>
    <br>
    <div id="answers">
        <h5>Answers</h5>
        <form class="form-inline" id="add" method="post" onsubmit="add_answer();return false;">
            <input class="form-control mr-sm-2" id="add_body" type="text" placeholder="Write an answer">
            <button class="btn btn-success my-2 my-sm-0" type="submit">Add</button>
        </form>
        <ul class="list-group answers">
            {{#each answers}}
                <li class="list-group-item">
                    <h6>{{this.body}}</h6>
                    <a href={{user_url this.user}}>- {{this.user}}</a>
                </li>
            {{/each}}
        </ul>
    </div>
</div>
</body>

</html>